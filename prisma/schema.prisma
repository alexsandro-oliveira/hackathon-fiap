generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String
  password     String  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Projeto {
  id           String     @id @default(uuid())
  name         String
  description  String
  fornecedorId String
  fornecedor   Fornecedor @relation(fields: [fornecedorId], references: [id])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Fornecedor {
  id        String    @id @default(uuid())
  name      String
  projetos  Projeto[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

